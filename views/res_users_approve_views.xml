<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Tree View -->
    <record id="res_user_approve_view_tree" model="ir.ui.view">
        <field name="name">res.users.approve.view.tree</field>
        <field name="model">res.users.approve</field>
        <field name="arch" type="xml">
            <tree string="Membership Applications">
                <field name="name"/>
                <field name="email"/>
                <field name="membership_status" widget="badge"
                       options="{'success': 'active', 'warning': 'pending', 'danger': 'cancelled', 'default': 'draft'}"/>
                <field name="membership_start_date"/>
                <field name="membership_end_date"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>




    <!-- Form View -->
    <record id="res_user_approve_view_form" model="ir.ui.view">
        <field name="name">res.users.approve.view.form</field>
        <field name="model">res.users.approve</field>
        <field name="arch" type="xml">
            <form string="Membership Application">
                <header>
<!--

                    <button name="update_all_approved_members" type="object"
                            string="Update All Approved Members"
                            class="btn-info"
                            confirm="This will update membership status for all approved members. Continue?"/>
-->

                    <!-- Simple buttons - visibility will be handled in the model -->
                    <button name="action_approve_login" type="object"
                            class="oe_highlight btn-primary" string="Approve"/>
                    <button name="action_reject_login" type="object"
                            class="btn-secondary" string="Reject"/>

                    <!-- Status bar -->
                    <field name="membership_status" widget="statusbar"
                           statusbar_visible="draft,pending,active,suspended,cancelled,expired"/>
                </header>

                <sheet>
                    <!-- Approved indicator using simple div with invisible attribute -->
                    <div class="alert alert-success mb-0" role="alert" invisible="not for_approval_menu">
                        âœ“ Approved on <field name="approved_date" widget="date"/>
                    </div>

                    <!-- Hidden fields -->
                    <field name="for_approval_menu" invisible="1"/>
                    <field name="hide_button" invisible="1"/>

                    <!-- Membership Information -->
                    <group string="Membership Information">
                        <group>
                            <field name="membership_start_date"/>
                            <field name="membership_end_date"/>
                            <field name="membership_renewal_date"/>
                            <field name="next_invoice_date"/>
                        </group>
                        <group>
                            <field name="membership_status"/>
                            <field name="cancellation_date"/>
                            <field name="cancellation_reason"/>
                            <field name="membership_invoice_id"/>
                        </group>
                    </group>

                    <!-- Personal Details -->
                    <group string="Personal Details">
                        <group>
                            <field name="customer_id"/>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="name"/>
                            <field name="company_name"/>
                            <field name="gender"/>
                            <field name="birthday"/>
                        </group>
                        <group>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="street"/>
                            <field name="address_supplement"/>
                            <field name="province"/>
                            <field name="city"/>
                            <field name="postal_code"/>
                            <field name="country_id"/>
                        </group>
                    </group>

                    <!-- Additional Information -->
                    <group string="Additional Information">
                        <group>
                            <field name="recommended_by"/>
                            <field name="accept_terms"/>
                        </group>
                        <group>
                            <field name="password" password="True"/>
                            <field name="approved_date"/>
                        </group>
                    </group>

                    <notebook>

                    <page string="Documents">
                        <field name="attachment_ids" readonly="1">
                            <tree>
                                <field name="attachments"
                                       options="{'no_quick_create': True, 'size': [300, 300]}"
                                       widget="image"
                                       class="oe_avatar"/>

<!--
                                <field name="attachments"
                                       widget="binary"
                                       filename="name"/>
-->

<!--                                <field name="attachments"
                                       filename="filename"/>-->
                            </tree>

<!--
                            <form>
                                <field name="attachments" widget="binary" filename="name"/>
                            </form>
-->
                        </field>

                    </page>

                        <page string="Activity">
                            <field name="activity_ids"/>
                        </page>

                        <page string="Invoices">
                            <field name="membership_invoice_id">
                                <tree>
                                    <field name="name"/>
                                    <field name="invoice_date"/>
                                    <field name="amount_total"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Cancel Wizard View -->
    <record id="view_membership_cancel_wizard_form" model="ir.ui.view">
        <field name="name">membership.cancel.wizard.form</field>
        <field name="model">membership.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancel Membership">
                <sheet>
                    <group>
                        <field name="approval_id" readonly="1"/>
                        <field name="cancellation_date" required="1"/>
                        <field name="cancellation_reason" required="1"/>
                    </group>
                    <footer>
                        <button name="action_confirm_cancellation" string="Confirm Cancellation" type="object" class="btn-danger"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_signup_notification_form" model="ir.ui.view">
        <field name="name">signup.notification.form</field>
        <field name="model">signup.notification</field>
        <field name="arch" type="xml">
            <form string="Signup Notification">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_signup_notification_tree" model="ir.ui.view">
        <field name="name">signup.notification.tree</field>
        <field name="model">signup.notification</field>
        <field name="arch" type="xml">
            <tree string="Signup Notifications">
                <field name="name"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <!-- Actions -->
    <record id="res_users_approve_action" model="ir.actions.act_window">
        <field name="name">Portal Approval</field>
        <field name="res_model">res.users.approve</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_signup_notification" model="ir.actions.act_window">
        <field name="name">Signup Notifications</field>
        <field name="res_model">signup.notification</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="res_users_approve_menu" parent="base.menu_users"
              action="res_users_approve_action"/>

    <menuitem id="menu_signup_notification"
              name="Signup Notifications"
              parent="base.menu_users"
              sequence="10"
              action="action_signup_notification"/>
</odoo>