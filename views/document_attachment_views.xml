<record id="document_attachment_view_tree" model="ir.ui.view">
    <field name="name">document.attachment.tree</field>
    <field name="model">document.attachment</field>
    <field name="arch" type="xml">
        <tree>
            <field name="filename"/>
            <field name="document" widget="image" options="{'size':[64,64]}"/>
        </tree>
    </field>
</record>



    <record id="document_attachment_view_form" model="ir.ui.view">
    <field name="name">document.attachment.form</field>
    <field name="model">document.attachment</field>
    <field name="arch" type="xml">
        <form string="Document Attachment">
            <sheet>
                <group>
                    <field name="document"
                           filename="filename"
                           widget="image"
                           options="{'preview_image': 'document'}"/>
                    <field name="filename" readonly="1"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

    <record id="document_attachment_action" model="ir.actions.act_window">
        <field name="name">Attachments</field>
        <field name="res_model">document.attachment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="document_attachment_menu" name="Attachment"
              parent="sale.menu_sales_config"
              action="document_attachment_action"/>


</odoo>
