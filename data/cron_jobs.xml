<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Daily membership check cron job -->
    <record id="ir_cron_membership_renewal" model="ir.cron">
        <field name="name">Membership Renewal Check</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="website_signup_approval.model_membership_renewal_cron"/>
        <field name="state">code</field>
        <field name="code">model.run_membership_renewals()</field>
        <field name="priority">10</field>
    </record>
</odoo>